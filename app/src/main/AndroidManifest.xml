    package="com.example.chemm.jimdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListViewActivity" />
        <activity android:name=".ListViewActivity2" />
        <activity android:name=".ViewPagerActivity" />
        <activity android:name=".DialogActivity" />
        <activity android:name=".BaseActivity"/>
        <activity android:name=".LetterActivityA"/>
        <activity android:name=".LetterActivityB"
            android:launchMode="singleTop"/>
        <activity android:name=".LetterActivityC"
            android:launchMode="singleTask"/>
        <activity android:name=".LetterActivityD"
            android:launchMode="singleInstance"/>
        <activity android:name=".TimerActivity"/>
        <activity android:name=".AnimationActivity"></activity>
    </application>

</manifest>