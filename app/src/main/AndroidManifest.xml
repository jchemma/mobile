<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chemm.jimdemo">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListViewActivity" />
        <activity android:name=".ListViewActivity2" />
        <activity android:name=".ViewPagerActivity" />
        <activity android:name=".DialogActivity" />
        <activity android:name=".BaseActivity" />
        <activity android:name=".LetterActivityA" />
        <activity
            android:name=".LetterActivityB"
            android:launchMode="singleTop" />
        <activity
            android:name=".LetterActivityC"
            android:launchMode="singleTask" />
        <activity
            android:name=".LetterActivityD"
            android:launchMode="singleInstance" />
        <activity android:name=".TimerActivity" />
        <activity android:name=".AnimationActivity" />
        <activity android:name=".AnimatorActivity" />
        <activity
            android:name=".MainActivity"/>
    </application>

</manifest>